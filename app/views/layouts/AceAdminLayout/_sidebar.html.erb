      <li <%= active_page?(buttons_path) %>>
        <%= link_to (raw('<i class="icon-double-angle-right"></i>Buttons &amp; Icons')), buttons_path %>
      </li>

      <li <%= active_page?(treeview_path) %>>
          <%= link_to (raw('<i class="icon-double-angle-right"></i>Treeview')), treeview_path %>
      </li>
    </ul>
  <% end %>

  <li <%= active_page?(tables_path) %>>
    <%= link_to (raw('<i class="icon-list"></i><span>Tables</span>')), tables_path %>
  </li>


  <%= content_tag :li, :class => "#{active_menu?(current_page?(formelements_path) || current_page?(formwizard_path) || current_page?(wysiwyg_path))}" do %>
    <a href="#" class="dropdown-toggle">
      <i class="icon-edit"></i>
      <span>Forms</span>

      <b class="arrow icon-angle-down"></b>
    </a>

    <ul class="submenu">
      <li <%= active_page?(formelements_path) %>>
        <%= link_to (raw('<i class="icon-double-angle-right"></i>Form Elements')), formelements_path %>
      </li>

      <li <%= active_page?(formwizard_path) %>>
        <%= link_to (raw('<i class="icon-double-angle-right"></i>Wizard & Validation')), formwizard_path %>
      </li>

      <li <%= active_page?(wysiwyg_path) %>>
        <%= link_to (raw('<i class="icon-double-angle-right"></i>Wysiwyg & Markdown')), wysiwyg_path %>
      </li>
    </ul>
  <% end %>

  <li <%= active_page?(widgets_path) %>>
      <%= link_to (raw('<i class="icon-list-alt"></i><span>Widgets</span>')), widgets_path %>
  </li>

  <li <%= active_page?(calendar_path) %>>
    <%= link_to (raw('<i class="icon-calendar"></i><span>Calendar</span>')), calendar_path %>
  </li>

  <li <%= active_page?(gallery_path) %>>
    <%= link_to (raw('<i class="icon-picture"></i><span>Gallery</span>')), gallery_path %>

  </li>

  <li <%= active_page?(grid_path) %>>
    <%= link_to (raw('<i class="icon-th"></i><span>Grid</span>')), grid_path %>
  </li>

  <%= content_tag :li, :class => "#{active_menu?(current_page?(pricing_path) || current_page?(invoice_path) || current_page?(login_path) || current_page?(error404_path) || current_page?(error500_path) || current_page?(blank_path))}" do %>
    <a href="#" class="dropdown-toggle">
      <i class="icon-file"></i>
      <span>Other Pages</span>

      <b class="arrow icon-angle-down"></b>
    </a>

    <ul class="submenu">
      <li <%= active_page?(pricing_path) %>>
        <%= link_to (raw('<i class="icon-double-angle-right"></i>Pricing Tables')), pricing_path %>

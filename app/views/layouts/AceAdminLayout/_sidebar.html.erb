<div id="sidebar">
<div id="sidebar-shortcuts">
  <div id="sidebar-shortcuts-large">
    <button class="btn btn-small btn-success">
      <i class="icon-signal"></i>
    </button>

    <button class="btn btn-small btn-info">
      <i class="icon-pencil"></i>
    </button>

    <button class="btn btn-small btn-warning">
      <i class="icon-group"></i>
    </button>

    <button class="btn btn-small btn-danger">
      <i class="icon-cogs"></i>
    </button>
  </div>

  <div id="sidebar-shortcuts-mini">
    <span class="btn btn-success"></span>

    <span class="btn btn-info"></span>

    <span class="btn btn-warning"></span>

    <span class="btn btn-danger"></span>
  </div>
</div><!--#sidebar-shortcuts-->

<ul class="nav nav-list">
  <li <%= active_page?(index_path) %>>
    <%= link_to (raw('<i class="icon-dashboard"></i><span>Dashboard</span>')), index_path %>
  </li>

  <li <%= active_page?(typography_path) %>>
    <%= link_to (raw('<i class="icon-text-width"></i><span>Typography</span>')), typography_path %>
  </li>

  <%= content_tag :li, :class => "#{active_menu?(current_page?(buttons_path) || current_page?(elements_path) || current_page?(treeview_path))}" do %>
    <a href="#" class="dropdown-toggle">
      <i class="icon-desktop"></i>
      <span>UI Elements</span>

      <b class="arrow icon-angle-down"></b>
    </a>

    <ul class="submenu">
      <li <%= active_page?(elements_path) %>>
          <%= link_to (raw('<i class="icon-double-angle-right"></i>Elements')), elements_path %>

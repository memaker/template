        <%= link_to (raw('<i class="icon-double-angle-right"></i>Error 500')), error500_path %>
      </li>

      <li <%= active_page?(blank_path) %>>
        <%= link_to (raw('<i class="icon-double-angle-right"></i>Blank Page')), blank_path %>
      </li>
    </ul>
  <% end %>
</ul><!--/.nav-list-->

<div id="sidebar-collapse">
  <i class="icon-double-angle-left"></i>
</div>
</div>